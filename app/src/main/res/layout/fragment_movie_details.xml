<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/movieDetailBackground"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/backdropImageView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/backdropFilter"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:alpha="0.35"
                android:background="#000000"
                app:layout_constraintTop_toTopOf="@id/backdropImageView"
                app:layout_constraintStart_toStartOf="@id/backdropImageView"
                app:layout_constraintEnd_toEndOf="@id/backdropImageView"
                app:layout_constraintBottom_toBottomOf="@id/backdropImageView"/>

            <ImageView
                android:id="@+id/coverImageView"
                android:layout_width="92dp"
                android:layout_height="138dp"
                android:layout_marginTop="@dimen/movie_detail_cover_top_margin"
                android:layout_marginStart="@dimen/movie_detail_cover_start_margin"
                android:elevation="2dp"
                android:outlineProvider="bounds"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_details_title_margin"
                android:layout_marginEnd="@dimen/movie_details_title_margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/movie_detail_title_size"
                android:textColor="@color/movieDetailTitle"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/releaseDateTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/coverImageView"
                app:layout_constraintTop_toTopOf="@id/coverImageView"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Fast and the Furious 9: Final Race" />

            <TextView
                android:id="@+id/releaseDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/movieDetailReleaseDate"
                android:layout_marginTop="@dimen/movie_detail_release_date_top_margin"
                android:layout_marginBottom="@dimen/movie_detail_release_date_margin_bottom"
                android:layout_marginStart="@dimen/movie_detail_release_date_margin"
                android:textSize="@dimen/movie_detail_release_date_size"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                app:layout_constraintBottom_toBottomOf="@id/backdropImageView"
                app:layout_constraintStart_toEndOf="@id/coverImageView"
                tools:text="2020"/>

            <TextView
                android:id="@+id/runtimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_detail_runtime_margin"
                android:textColor="@color/movieDetailText"
                android:textSize="@dimen/movie_detail_runtime_size"
                app:layout_constraintTop_toBottomOf="@id/backdropImageView"
                app:layout_constraintBottom_toBottomOf="@id/coverImageView"
                app:layout_constraintStart_toEndOf="@id/coverImageView"
                tools:text="120 min"/>

            <View
                android:id="@+id/runtimeDivider"
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="@dimen/movie_detail_runtime_divider_margin"
                app:layout_constraintTop_toTopOf="@+id/runtimeTextView"
                app:layout_constraintBottom_toBottomOf="@+id/runtimeTextView"
                app:layout_constraintStart_toEndOf="@+id/runtimeTextView"/>

            <TextView
                android:id="@+id/genreTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_detail_genre_margin"
                android:textColor="@color/movieDetailText"
                android:textSize="@dimen/movie_detail_genre_text_size"
                app:layout_constraintTop_toTopOf="@+id/runtimeTextView"
                app:layout_constraintBottom_toBottomOf="@id/runtimeTextView"
                app:layout_constraintStart_toEndOf="@+id/runtimeDivider"
                tools:text="Drama, Thriller" />

            <ImageView
                android:id="@+id/averageVoteImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/movie_detail_average_vote_icon_margin"
                android:src="@drawable/ic_star_filled"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@+id/coverImageView"
                app:layout_constraintStart_toStartOf="@+id/coverImageView"
                app:layout_constraintEnd_toStartOf="@id/averageVoteTextView" />

            <TextView
                android:id="@+id/averageVoteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_detail_average_vote_text_margin"
                android:textColor="@color/movieDetailText"
                android:textSize="@dimen/movie_detail_average_vote_text_size"
                app:layout_constraintStart_toEndOf="@+id/averageVoteImageView"
                app:layout_constraintTop_toTopOf="@+id/averageVoteImageView"
                app:layout_constraintBottom_toBottomOf="@+id/averageVoteImageView"
                app:layout_constraintEnd_toEndOf="@id/coverImageView"
                tools:text="5.7"/>

            <TextView
                android:id="@+id/taglineTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_detail_tagline_start_margin"
                android:layout_marginEnd="@dimen/movie_detail_tagline_margin"
                android:textColor="@color/movieDetailText"
                android:textSize="@dimen/movie_detail_tagline_size"
                app:layout_constraintTop_toTopOf="@id/averageVoteTextView"
                app:layout_constraintStart_toEndOf="@id/coverImageView"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="This is the tagline of the movie."/>

            <androidx.cardview.widget.CardView
                android:id="@+id/overviewCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/movie_detail_overview_card_margin_top"
                android:layout_marginEnd="@dimen/movie_detail_overview_card_margin_end"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/taglineTextView"
                app:layout_constraintStart_toStartOf="@id/coverImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="4dp"
                app:contentPadding="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/overviewHeadlineTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/movieDetailCardHeadline"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="@dimen/movie_detail_overview_headline_size"
                        android:text="@string/movie_detail_overview_headline"/>

                    <TextView
                        android:id="@+id/overviewTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/movie_detail_overview_margin_top"
                        android:textColor="@color/movieDetailText"
                        android:textSize="@dimen/movie_detail_overview_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/overviewHeadlineTextView"
                        tools:text="This is a very long description. Lorem ipsum my akdj aksd fkas dkas fdkas dkae skkd fe skd j eks fk ek sjd fka sdk fj aks dkf ek ak dkfe  ak  ksdkfaksdjf aksd fkejf ksdjf kwejfksdjf kejskdjfekfj ksdjf ek" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/loadingProgressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="?android:attr/progressBarStyle"
                android:background="?android:attr/selectableItemBackground"
                android:translationZ="5dp"
                android:indeterminate="true"
                android:layout_gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addOrRemoveMovieFAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/movie_detail_add_movie_margin"
                android:layout_marginBottom="@dimen/movie_detail_add_movie_margin"
                android:elevation="6dp"
                android:src="@drawable/add_icon_selector"
                android:clickable="true"
                android:focusable="true"
                app:fabCustomSize="45dp"
                app:backgroundTint="@drawable/fab_color_selector"
                app:borderWidth="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/backdropImageView"
                app:layout_constraintBottom_toBottomOf="@id/backdropImageView"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/hasBeenWatchedFAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/movie_detail_add_movie_margin"
                android:elevation="6dp"
                android:src="@drawable/watched_icon_selector"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="center"
                app:maxImageSize="20dp"
                app:fabCustomSize="35dp"
                app:backgroundTint="@drawable/fab_color_selector"
                app:borderWidth="0dp"
                app:layout_constraintEnd_toStartOf="@id/addOrRemoveMovieFAB"
                app:layout_constraintTop_toTopOf="@id/addOrRemoveMovieFAB"
                app:layout_constraintBottom_toBottomOf="@id/addOrRemoveMovieFAB"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/backdropsRecyclerView"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/movie_detail_images_rv_padding_start"
                android:layout_marginTop="@dimen/movie_detail_images_rv_margin_top"
                android:layout_marginBottom="@dimen/movie_detail_images_rv_margin_bottom"
                tools:listitem="@layout/recyclerview_item_movie_details_images"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/overviewCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/trailerFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/movie_detail_trailer_fab_margin"
        android:layout_marginBottom="@dimen/movie_detail_trailer_fab_margin"
        android:elevation="6dp"
        android:src="@drawable/ic_youtube"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="center"
        app:fabCustomSize="45dp"
        app:backgroundTint="@color/movieDetailFAB"
        app:borderWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
