<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="169dp"
    android:layout_marginTop="@dimen/movie_detail_images_rv_item_margin_top"
    android:layout_marginBottom="@dimen/movie_detail_images_rv_item_margin_bottom"
    android:layout_marginStart="@dimen/movie_detail_images_rv_item_margin"
    android:layout_marginEnd="@dimen/movie_detail_images_rv_item_margin"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@android:color/transparent">

        <ImageView
            android:id="@+id/imageImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

</FrameLayout>